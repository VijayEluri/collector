<assembly>
    <id>galaxy</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>src/main/galaxy</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0744</fileMode>
        </fileSet>
        <fileSet>
            <directory>src/main/galaxy-config</directory>
            <outputDirectory>etc</outputDirectory>
            <fileMode>0744</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/${artifactId}-${version}.jar</source>
            <destName>main.jar</destName>
            <outputDirectory>lib/</outputDirectory>
        </file>
    </files>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>com.ning:galaxy-deploy-scripts:tar.gz</include>
            </includes>
            <unpack>true</unpack>
            <fileMode>0744</fileMode>
        </dependencySet>
        <dependencySet>
            <outputFileNameMapping>
                ${artifact.groupId}-${artifact.artifactId}-${artifact.version}${dashClassifier?}.${artifact.extension}
            </outputFileNameMapping>
            <outputDirectory>lib/dist</outputDirectory>
            <fileMode>0644</fileMode>
        </dependencySet>
    </dependencySets>
</assembly>
